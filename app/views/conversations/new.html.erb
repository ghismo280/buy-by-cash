<h1>Hello in the conversation</h1>

<%= simple_form_for @conversation , :url => create_conversation_path, :method => :post do |f| %>
  <%= f.error_notification %>

  <%= simple_fields_for :message do |t| %>
      <%= t.input :body %>
  <% end %>





  <%= f.button :submit, class: "btn-primary" %>
  <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
<% end %>
