<div class="container">
<%=  render "shared/navbar" %>
  <h3 class="text-center">
    These guys can help you:
  </h3>

  <div
  id="map"
  style="width: 85%; height: 600px"
></div>

<div class="form-container">
  <form>
    <div class="form-group">
      <label for="citySearchBox">City search</label>
      <input type="text" class="form-control" id="citySearchBox" aria-describedby="cityHelp" placeholder="Enter your city">
      <small id="emailHelp" class="form-text text-muted">Enter the city where you live and you'll see the nearest people who can help you.</small>
    </div>
  </form>
</div>

  <% @ebuyers.each do |ebuyer| %>
    <%= link_to "/#{ebuyer.id}" do%>
     <div class="main-card">
      <img class="avatar-ebuyer" src= <%= ebuyer.photo %> />
        <div class="info">
          <div class="info-name">
            Name: <b><%= ebuyer.name %> <%= ebuyer.surname %></b>
          </div>
          <div class="info-middle">
            Age: <b><%= ebuyer.age %></b> &nbsp; | &nbsp;
            Rating: <b><%= ebuyer.average_rating %></b> <br>
            City: <b><%= ebuyer.city %></b>
          </div>
          <div class="info-tagline">
            <%= ebuyer.tagline %>
          </div>
        </div>
    </div>
    <% end %>
  <% end %>

